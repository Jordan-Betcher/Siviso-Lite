<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/permissionName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/permissionShowDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/permissionAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permission_accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/permissionShowDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/permission_show_details"
        app:layout_constraintEnd_toStartOf="@+id/permissionAccept"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/permissionDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/permissionAccept" />
</androidx.constraintlayout.widget.ConstraintLayout>